class Solution {
    public boolean isValid(String s) {
         Stack<Character> st = new Stack<Character>();

        for(int i=0;i<s.length();i++)
        {
            
            if(s.charAt(i)=='(' || s.charAt(i)=='{' || s.charAt(i)=='[')
            {
                st.push(s.charAt(i));
            }

       else if(st.empty())
            {
                return false;
            }

            // for closed brackets
            else if (st.peek() == '{' && s.charAt(i) == '}' ) 
            {
                st.pop();
            } 

            else if (st.peek() == '(' && s.charAt(i) == ')' ) 
            {
                st.pop();
            } 
            
            else if (st.peek() == '[' && s.charAt(i) == ']' ) 
            {
                st.pop();
            }
            
            else
            {
                return false;
            }
        }
                
        
        return st.isEmpty();
    }
}
